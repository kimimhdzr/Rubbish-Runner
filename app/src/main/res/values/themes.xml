<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for light mode. -->
    <style name="Base.Theme.TrashRunner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#4FB478</item> <!-- Teal primary color -->
        <item name="colorPrimaryVariant">#4FB478
        </item> <!-- A slightly different shade for variant -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White text/icons on primary color -->

        <item name="colorSecondary">#FFB74D</item> <!-- Same teal for secondary elements -->
        <item name="colorSecondaryVariant">#FF9800</item>
        <item name="colorOnSecondary">#000000</item> <!-- White text/icons on secondary color -->

        <item name="colorTertiary">#DAF1D5</item>
        <item name="colorOnTertiary">#D94FB478</item>


        <item name="colorSurface">#F5F5F5</item> <!-- White surface color for light theme -->
        <item name="colorOnSurface">#000000</item> <!-- Black text/icons on white surface -->

        <item name="android:colorBackground">#F5F5F5</item> <!--white background -->
        <item name="backgroundColor">#FFFFFF</item>
        <item name="colorOnBackground">#000000</item> <!-- Black text/icons on white background -->

        <item name="colorError">#B00020</item> <!-- Standard error color for light themes (red) -->
        <item name="colorOnError">#FFFFFF</item> <!-- White text/icons on error color -->

        <item name="android:statusBarColor">#4FB478</item>
        <item name="android:navigationBarColor">#FFFFFF</item>

        <!--bottom nav -->
        <item name="bottomNavigationStyle">@style/BottomNavStyleLight</item>
        <!--card-->
        <item name="materialCardViewStyle">@style/MyMaterialCardViewLight</item>

        <!-- Enable motion for fragment transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <!--        <item name="android:sharedElementEnterTransition">@transition/shared_element_container_transform</item>-->
        <!--        <item name="android:sharedElementExitTransition">@transition/shared_element_container_transform</item>-->

        <item name="android:textColor">#000000</item>
        <item name="subtitleTextColor">#A0A0A0</item>
    </style>

    <style name="BottomNavStyleLight">
        <item name="itemIconTint">@color/bottom_nav_item_selector_light</item>
        <item name="itemTextColor">@color/bottom_nav_item_selector_light</item>
    </style>

    <style name="MyMaterialCardViewLight" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardBackgroundLight</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <!--        <item name="strokeColor">@color/cardStrokeColorLight</item>-->
        <item name="strokeWidth">2dp</item>
    </style>


    <style name="Theme.TrashRunner" parent="Base.Theme.TrashRunner" />
</resources>
